@page
@model CreateGroupModel
@{
    ViewData["Title"] = "Create Group";
}

<div class="container mt-4">
    <h2 class="mb-4">Create Group</h2>

    <form method="post" class="mt-3">
  
        <div class="mb-3">
            <label for="Name" class="form-label">Group Name</label>
            <input id="Name" name="Name" class="form-control" placeholder="Enter group name" required />
        </div>

        <div class="mb-3">
            <label for="Members" class="form-label">Select Members</label>
            <div class="form-check">
                @foreach (var user in Model.Users)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="user-@user.Id" name="SelectedUsers"
                            value="@user.Id" />
                        <label class="form-check-label" for="user-@user.Id">@user.UserName</label>
                    </div>
                }
            </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100">Create Group</button>
    </form>
</div>
