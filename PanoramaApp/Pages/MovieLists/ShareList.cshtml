@page "{listId:int}"
@model PanoramaApp.Pages.MovieLists.ShareListModel

<h2>Share Movie List</h2>

@if (Model.MovieList != null)
{
    <p>Here is the shareable link for the movie list <strong>@Model.MovieList.Name</strong>:</p>
    <a href="@Model.ShareableLink" target="_blank">@Model.ShareableLink</a>
}
else
{
    <p>Movie list not found.</p>
}
