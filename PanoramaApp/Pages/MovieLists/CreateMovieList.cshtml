@page
@model PanoramaApp.Pages.MovieLists.CreateMovieListModel
@{
    ViewData["Title"] = "Create Movie List";
}

<h2>Create a Movie List</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">List Name</label>
        <input id="Name" name="Name" class="form-control" />
    </div>
    <div class="form-check">
        <input id="IsShared" name="IsShared" type="checkbox" class="form-check-input" />
        <label for="IsShared">Share with groups</label>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
