@page
@model PanoramaApp.Pages.MovieLists.CreateMovieListModel
@{
    ViewData["Title"] = "Create Movie List";
}

<h2>Create a Movie List</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">List Name</label>
        <input id="Name" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="SelectedGroups">Share with Groups</label>
        <select id="SelectedGroups" name="SelectedGroupIds" multiple class="form-select">
            @foreach (var group in Model.UserGroups)
            {
                <option value="@group.Id">@group.Name</option>
            }
        </select>
        <small class="form-text text-muted">Hold Ctrl (Cmd on Mac) to select multiple groups.</small>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
