@page
@model PanoramaApp.Pages.UserStatisticsModel

<h2>User Statistics</h2>

<p><strong>Most Watched Genre:</strong> @Model.Statistics.MostWatchedGenre</p>
<p><strong>Most Watched Decade:</strong> @Model.Statistics.MostWatchedDecade</p>

<h3>Genre Breakdown:</h3>
<ul>
    @foreach (var genre in Model.Statistics.GenreCounts)
    {
        <li>@genre.Key: @genre.Value movies</li>
    }
</ul>

<h3>Decade Breakdown:</h3>
<ul>
    @foreach (var decade in Model.Statistics.DecadeCounts)
    {
        <li>@decade.Key's: @decade.Value movies</li>
    }
</ul>
