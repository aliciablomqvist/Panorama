# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

# Specifika inställningar för C#-filer
[*.cs]
# Indentering och mellanslag
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Radlängd
max_line_length = 120

# Kodformat
csharp_new_line_before_open_brace = all
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_before_open_square_brackets = false
csharp_space_between_square_brackets = false

# Modifiera arrangemang av element
csharp_sort_system_directives_first = true
csharp_using_directive_placement = inside_namespace

# Formateringsinställningar
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Dokumentationskrav
dotnet_diagnostic.SA1600.severity = warning # Saknade XML-kommentarer
dotnet_diagnostic.SA1633.severity = warning # Saknade filhuvuden

# StyleCop-analyser (vanliga i C#-projekt)
dotnet_diagnostic.SA1201.severity = warning # Medlemmar bör deklareras i en specifik ordning
dotnet_diagnostic.SA1203.severity = warning # Konstanter bör placeras före fält
dotnet_diagnostic.SA1401.severity = warning # Fält bör inte vara publika
dotnet_diagnostic.SA1649.severity = warning # Filnamn ska matcha klassnamn
